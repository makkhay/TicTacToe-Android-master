<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="top|center"
    android:background="#ffffff"
    tools:context=".LoginToGameActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    app:cardElevation="3dp"
    android:background="#fefefe"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/player_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="45dp"
            >
            <TextView
                android:layout_width="120dp"
                android:textSize="25sp"
                android:textColor="#2196f3"
                android:layout_height="wrap_content"
                android:text="Player 1 :" />
            <EditText
                android:id="@+id/nameplayer1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Name of Player 1"
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/player_two"
            android:layout_below="@+id/player_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="120dp"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="Player 2 :"
                />
            <EditText
                android:id="@+id/nameplayer2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Name of Player 2"
                android:maxLines="1"/>
        </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/player_two"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">
        <Button
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:text="Play"
            android:textSize="18sp"
            android:onClick="onPlay"/>
        <Button
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:text="Exit"
            android:textSize="18sp"
            android:onClick="onExit"/>
    </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>

</LinearLayout>